<div class="container justify-space-between mt-3">
  <div class="row">
    <div class="col">
      <h1>My lists</h1>
    </div>
    <div class="col text-end">
      <%= link_to "New List", new_list_path, class: "btn btn-outline-secondary mx-2" %>
    </div>
  </div>
</div>
<hr>

<div class="container mb-4">
  <div class="row row-cols-1 row-cols-md-3 g-5">
    <% @lists.each do |list| %>
    <div class="col-md-4">
      <div class="card mb-4 bg-dark h-100 text-center shadow-sm rounded" style="">
        <div class="card-body px-0">
          <h5 class="card-title"><%= list.name %></h5>
          <p class="card-text">text</p>
        </div>
        <div class="card-body mb-1 px-0">
          <%= link_to "See movies", list_path(list), class: "btn btn-sm btn-outline-primary"  %>
          <%= link_to "Edit", new_list_path, class: "btn btn-sm btn-outline-secondary mx-2 px-3"  %>
          <%= link_to "Remove", new_list_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-sm btn-outline-danger"  %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
