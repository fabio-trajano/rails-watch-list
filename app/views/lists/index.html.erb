<div class="container justify-space-between mt-3 mb-3">
  <div class="row">
    <div class="col">
      <h1>My lists</h1>
    </div>
    <div class="col text-end">
      <%= link_to "New List", new_list_path, class: "btn btn-outline-secondary mx-2" %>
    </div>
  </div>
</div>
<hr>
<div class="container w-50 mt-5">
  <% @lists.each do |list| %>
  <div class="row d-flex justify-space-between my-2">
    <div class="col-1 d-flex justify-content-center align-items-center">
      <i class="fa-solid fa-clapperboard fa-xl"></i>
    </div>
    <div class="col-5">
      <ul class="list-group">
        <li style="font-size:20px;"class="list-group-item"><%= list.name %></li>
      </ul>
    </div>
    <div class="col-6 text-end">
      <%= link_to "See movies", list_path(list), class: "btn btn-outline-info"  %>
      <%= link_to "Edit", edit_list_path(list),data: {turbo_method: :patch}, class: "btn btn-outline-secondary mx-2 px-3"  %>
    </div>
  </div>
  <hr>
  <% end %>
</div>
